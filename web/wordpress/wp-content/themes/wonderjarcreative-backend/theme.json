{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "slug": "teal",
          "name": "Teal",
          "color": "#50C9B4"
        },
        {
          "slug": "warm-coral",
          "name": "Warm Coral",
          "color": "#F2685E"
        },
        {
          "slug": "muted-brick-red",
          "name": "Muted Brick Red",
          "color": "#C24D53"
        },
        {
          "slug": "deep-black",
          "name": "Deep Black",
          "color": "#000000"
        },
        {
          "slug": "retro-teal",
          "name": "Retro Teal",
          "color": "#4D7A7F"
        },
        {
          "slug": "soft-cream",
          "name": "Soft Cream",
          "color": "#EFE5D5"
        },
        {
          "slug": "charcoal-gray",
          "name": "Charcoal Gray",
          "color": "#4E5664"
        },
        {
          "slug": "marigold-yellow",
          "name": "Marigold Yellow",
          "color": "#EAA221"
        },
        {
          "slug": "white",
          "name": "White",
          "color": "#FFFFFF"
        }
      ],
      "gradients": [
        {
          "slug": "gradient-tech",
          "name": "Tech Gradient (Teal to Retro Teal)",
          "gradient": "linear-gradient(135deg, #50C9B4 0%, #4D7A7F 100%)"
        },
        {
          "slug": "gradient-warm",
          "name": "Warm Gradient (Coral to Marigold)",
          "gradient": "linear-gradient(135deg, #F2685E 0%, #EAA221 100%)"
        },
        {
          "slug": "gradient-subtle",
          "name": "Subtle Gradient (Cream to White)",
          "gradient": "linear-gradient(180deg, #EFE5D5 0%, #FFFFFF 100%)"
        },
        {
          "slug": "gradient-radial-teal",
          "name": "Radial Glow (Teal)",
          "gradient": "radial-gradient(circle at 50% 0%, rgba(80, 201, 180, 0.2) 0%, transparent 70%)"
        },
        {
          "slug": "gradient-radial-coral",
          "name": "Radial Glow (Coral)",
          "gradient": "radial-gradient(circle at 50% 0%, rgba(242, 104, 94, 0.2) 0%, transparent 70%)"
        }
      ]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1280px"
    },
    "spacing": {
      "defaultSpacingSizes": false,
      "spacingSizes": [
        {
          "name": "Tiny",
          "size": "10px",
          "slug": "20"
        },
        {
          "name": "X-Small",
          "size": "20px",
          "slug": "30"
        },
        {
          "name": "Small",
          "size": "30px",
          "slug": "40"
        },
        {
          "name": "Regular",
          "size": "clamp(30px, 5vw, 50px)",
          "slug": "50"
        },
        {
          "name": "Large",
          "size": "clamp(30px, 7vw, 70px)",
          "slug": "60"
        },
        {
          "name": "X-Large",
          "size": "clamp(50px, 7vw, 90px)",
          "slug": "70"
        },
        {
          "name": "XX-Large",
          "size": "clamp(70px, 10vw, 140px)",
          "slug": "80"
        }
      ],
      "units": [
        "%",
        "px",
        "em",
        "rem",
        "vh",
        "vw"
      ]
    },
    "typography": {
      "writingMode": true,
      "defaultFontSizes": false,
      "fluid": true,
      "fontSizes": [
        {
          "slug": "xs",
          "size": "0.75rem",
          "name": "XS"
        },
        {
          "slug": "sm",
          "size": "0.875rem",
          "name": "SM"
        },
        {
          "slug": "base",
          "size": "1rem",
          "name": "Base"
        },
        {
          "slug": "lg",
          "size": "1.125rem",
          "name": "LG"
        },
        {
          "slug": "xl",
          "size": "1.25rem",
          "name": "XL"
        },
        {
          "slug": "2xl",
          "size": "1.5rem",
          "name": "2XL"
        },
        {
          "slug": "3xl",
          "size": "1.875rem",
          "name": "3XL"
        },
        {
          "slug": "4xl",
          "size": "2.25rem",
          "name": "4XL"
        },
        {
          "slug": "5xl",
          "size": "3rem",
          "name": "5XL"
        },
        {
          "slug": "6xl",
          "size": "3.75rem",
          "name": "6XL"
        },
        {
          "slug": "7xl",
          "size": "4.5rem",
          "name": "7XL"
        },
        {
          "slug": "8xl",
          "size": "6rem",
          "name": "8XL"
        },
        {
          "slug": "9xl",
          "size": "8rem",
          "name": "9XL"
        }
      ]
    },
    "useRootPaddingAwareAlignments": true
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--soft-cream)",
      "text": "var(--wp--preset--color--charcoal-gray)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--roboto, sans-serif)",
      "fontSize": "1.125rem",
      "lineHeight": "1.5",
      "letterSpacing": "0"
    },
    "spacing": {
      "padding": {
        "left": "var(--wp--preset--spacing--30)",
        "right": "var(--wp--preset--spacing--30)"
      }
    },
    "elements": {
      "heading": {
        "color": {
          "text": "var(--wp--preset--color--deep-black)"
        },
        "typography": {
          "fontWeight": "700"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--7-xl)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--6-xl)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--5-xl)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--4-xl)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--sm)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)"
        }
      }
    },
    "blocks": {
      "core/site-title": {
        "color": {
          "text": "var(--wp--preset--color--deep-black)"
        },
        "typography": {
          "fontWeight": "700"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "header-absolute",
      "title": "Header Absolute",
      "area": "header"
    },
    {
      "name": "header-sticky",
      "title": "Header Sticky",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "patterns": [
    "about",
    "contact",
    "home",
    "hero-about",
    "hero-contact",
    "hero-home",
    "services",
    "cta-get-in-touch",
    "cta-start-project"
  ]
}