# WordPress API URLs and Credentials (PRODUCTION)
NEXT_PUBLIC_BASE_URL=https://wonderjarcreative.com
NEXT_PUBLIC_WORDPRESS_API_URL=https://cms.wonderjarcreative.com
NEXT_PUBLIC_WORDPRESS_API_HOSTNAME=cms.wonderjarcreative.com
HEADLESS_SECRET="your-production-headless-secret"
WP_USER=frontendUser
WP_APP_PASS="your-production-app-password"
WP_THEME="wonderjarcreative-backend"

# Gravity Forms API Credentials (PRODUCTION)
GRAVITY_FORMS_CONSUMER_KEY=your-production-consumer-key
