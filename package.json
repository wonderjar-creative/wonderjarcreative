{
  "name": "wonderjarcreative-monorepo",
  "version": "2025.11.9",
  "private": true,
  "workspaces": [
    "web/frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "clean": "rm -rf node_modules web/frontend/node_modules web/frontend/.next",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "version": "node -e \"const root = require('./package.json').version; const frontend = require('./web/frontend/package.json').version; const fs = require('fs'); const theme = fs.readFileSync('web/wordpress/wp-content/themes/wonderjarcreative-backend/style.css', 'utf8').match(/Version: (.+)/)[1]; console.log('Root:     ' + root + '\\nFrontend: ' + frontend + '\\nTheme:    ' + theme);\"",
    "version:bump": "node scripts/version-bump.js",
    "composer:install": "cd web/wordpress/wp-content/themes/wonderjarcreative-backend && composer install",
    "composer:update": "cd web/wordpress/wp-content/themes/wonderjarcreative-backend && composer update",
    "composer:dump": "cd web/wordpress/wp-content/themes/wonderjarcreative-backend && composer dump-autoload",
    "theme:zip": "node scripts/theme-zip.js prod"
  },
  "devDependencies": {
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.2.4"
}
